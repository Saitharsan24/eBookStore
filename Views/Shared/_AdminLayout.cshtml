<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>eBookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .container{
            width:100%;
            padding: 30px 10px 10px 30px;
        }
        a:hover{
            cursor:pointer;
        }

        .logout-btn{
            margin-left: 30px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-3">
        <a class="navbar-brand" href="#">eBookStore</a>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link" onclick="window.location.href='@Url.Action("Index", "Admin")'">Home</a>
                <a class="nav-item nav-link" onclick="window.location.href='@Url.Action("Books", "Admin")'">Books</a>
                <a class="nav-item nav-link" onclick="window.location.href='@Url.Action("Orders", "Admin")'">Orders</a>
                <a class="nav-item nav-link" onclick="window.location.href='@Url.Action("User", "Admin")'">Users</a>
                <a class="nav-item nav-link" onclick="window.location.href='@Url.Action("Reports", "Admin")'">Reports</a>
                <a class="nav-item nav-link" onclick="window.location.href='@Url.Action("Profile", "Admin")'">Profile</a>
                <button class="btn btn-danger nav-item nav-link logout-btn" onclick="window.location.href='@Url.Action("Logout", "Account")'">Logout</button>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody() <!-- This renders the main content of the page -->
    </div>

    <!-- Render the Scripts section here -->
    @RenderSection("Scripts", required: false) <!-- Ensure this line is here -->
</body>
</html>
