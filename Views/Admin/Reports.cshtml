@{
    Layout = "../Shared/_AdminLayout.cshtml";
}

@{
    ViewData["Title"] = "Generate Reports";
}

<style>
    .container1{
        display:flex;
        flex-direction:row;
        margin: 25px 0px 0px 0px;
        gap: 100px;
    }

    .form-group{
        margin-bottom:20px
    }

    .form1{
        width: 40%;
    }

</style>

<h2>Generate Reports</h2>

<div class="container1">
    <form method="post" action="@Url.Action("GenerateOrdersReport", "Admin")" class="mb-4 form1">
        <h4 style="margin-bottom:20px">Orders Report</h4>
        <div class="form-group">
            <label for="startDate">Start Date</label>
            <input type="date" id="startDate" name="startDate" class="form-control" />
        </div>
        <div class="form-group">
            <label for="endDate">End Date</label>
            <input type="date" id="endDate" name="endDate" class="form-control" />
        </div>
        <div class="form-group">
            <label for="status">Status</label>
            <select id="status" name="status" class="form-control">
                <option value="">All</option>
                <option value="Pending">Pending</option>
                <option value="Cancelled">Cancelled</option>
                <option value="Completed">Completed</option>
                <option value="Shipped">Shipped</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Generate Orders Report</button>
    </form>

    <form method="post" action="@Url.Action("GenerateUsersReport", "Admin")">
        <h4 style="margin-bottom:25px">Users Report</h4>
        <button type="submit" class="btn btn-secondary">Generate Users Report</button>
    </form>
</div>
